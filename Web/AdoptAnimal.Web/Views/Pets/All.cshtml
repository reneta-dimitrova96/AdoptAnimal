@using AdoptAnimal.Common
@model AdoptAnimal.Web.ViewModels.Pets.PetsListViewModel
@{
    this.ViewData["Title"] = "Get all pets";
}

<div class="row mt-2">
    @foreach (var pet in this.Model.Pets)
    {
        <div class="p-1 media border-2 shadow-lg bg-white col-md-4">
            <div class="p-1 media border-2 shadow-lg bg-white col-md-12">
                <img class="align-self-center mr-2 img-responsive" src=@pet.ImageUrl alt=@pet.Name width="250" height="150">
                <div class="media-body">
                    <h5 class="text-center p-2">@pet.Name</h5>
                    <p class="text-center p-1 mt-3 font-weight-bolder ">@pet.CategoryName</p>
                    <a asp-action="ById" asp-route-id="@pet.Id" class="btn btn-info text-center p-1 mt-2 ml-3">More Info</a>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<partial name="_PagingPartial" model="@Model" />
