@model AdoptAnimal.Web.ViewModels.Pets.PetDetailsViewModel
@{
    this.ViewData["Title"] = "ById";
}
<div class="d-flex justify-content-sm-around mt-2">
    <div class="col-lg-3 col-md-12 mt-0 mb-2 rounded">
        <div class="cardm rounded mt-0">
            <h5 class="mb-1">@Model.Name</h5>
            <p class="mb-0">Години :@Model.Age</p>
            @if(Model.Gender == "Female")
            {
                <p class="mb-0">Пол: Женски</p>
            }else if(Model.Gender == "Male")
            {
                <p class="mb-0">Пол: Мъжки</p>
            }
            <p class="mb-0">Тегло: @Model.Weight</p>
            <p class="mb-0">Порода: @Model.Breed</p>
            @if(Model.IsDewormed == "Yes")
            {
                <p class="mb-0">Обезпаразитено: Да</p>
            }else if(Model.IsDewormed == "No")
            {
                <p class="mb-0">Обезпаразитено: Не</p>
            }
            else
            {
                <p class="mb-0">Обезпаразитено: Няма информация</p>
            }
            @if(Model.IsAdopted)
            {
                <p class="mb-0">Осиновено: Да</p>
            }else
            {
                <p class="mb-0">Осиновено: Не</p>
            }
            <a asp-controller="Advertisements" asp-action="ById" asp-route-id="@Model.AdvertisementId" class="btn btn-info text-center p-1 mt-2 ml-0">Към обявата</a>
        </div>
    </div>
    <div class="col-lg-9 col-md-12 mt-0 mb-2 shadow-1-strong rounded">
        <div class="row">
            @foreach (var petImage in Model.PetImages)
            {

                <div class="col-lg-6 col-md-12 pb-1 mb-2">
                    <div class="bg-image hover-overlay ripple rounded border-2 shadow-lg bg-white"
                     data-ripple-color="light">
                        <img src=@petImage.ImageUrl
                         class="w-100 rounded border-2 shadow-lg bg-white" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

