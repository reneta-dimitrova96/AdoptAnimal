@using AdoptAnimal.Common
@model AdoptAnimal.Web.ViewModels.Articles.GetAllArticlesViewModel
@{
    this.ViewData["Title"] = "Get all articles";
}

<section class="news pt-0">
    <div class="container mt-md-5">
        <h2 class="mx-4 my-0 text-center">Articles</h2>
        <ul class="row d-lg-flex list-unstyled image-block justify-content-center px-lg-0 mx-lg-0">
            @foreach (var article in Model.Articles)
            {
                <li class="col-lg-4 col-md-5 image-block full-width p-3">
                    <div class="image-block-inner">
                        <a class="mh-100" href="#">
                            <img src=@article.Source alt="LunarXP Wins Space Innovator of the Year Award" class="img-responsive w-100">
                        </a>
                        <h4 class="mt-3">@article.Title</h4>
                        <!--  <p></p> -->
                    <a class="read-more" asp-action="ById" asp-route-id="@article.Id">Read more ></a>
                    </div><!-- .image-block-inner -->
            </li>
            }
        </ul>
    </div>
</section>
<partial name="_PagingPartial" model="@Model" />

