@model AdoptAnimal.Web.ViewModels.Articles.CreateArticleInputModel
@{
    this.ViewData["Title"] = "Add new article";
}
<h1 class="text-center">@this.ViewData["Title"]</h1>

<form method="post" class="text-center">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Content">Content:</label>
        <input asp-for="Content" />
        <span asp-validation-for="Content"></span>
    </div>
    <label for="basic-url">Image URL</label>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon3">https://example.com/users/</span>
        </div>
        <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3" asp-for="ArticleImageSorce">
    </div>
    <input type="submit" />

</form>
