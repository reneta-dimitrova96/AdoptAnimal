@using AdoptAnimal.Common
@model AdoptAnimal.Web.ViewModels.Advertisements.AdvertisementsListViewModel
@{
    this.ViewData["Title"] = "Get all advertisements";
}

<div class="row">
    @foreach (var ad in this.Model.Advertisements)
    {
        <div class="card col-md-3 p-1 mt-2 shadow-lg bg-white">
            <div class="card col-md-12 p-1 shadow-lg bg-white">
                <img class="card-img-top img-responsive" src=@ad.Pet.ImageUrl alt=@ad.Pet.Name style="width:100%; height:50%">
                <div class="card-body p-1">
                    <h5 class="card-title text-center p-1 mb-0">@ad.Title</h5>
                    <p class="card-text mb-0">@ad.Description.Substring(0, 20)...</p>
                    <p class="card-text mb-1 text-center font-italic">@ad.CreatedOn.ToString("dd/MM/yy") @ad.Address</p>
                    <a asp-action="ById" asp-route-id="@ad.Id" class="btn btn-info ml-5 mb-0" style="border: none">Details</a>
                    <a asp-controller="Categories" asp-action="ById" asp-route-id="@ad.Pet.CategoryId" class="btn btn-primary ml-2 mb-0" style="background-color: #9370db; border: none">@ad.Pet.CategoryName</a>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<partial name="_PagingPartial" model="@Model" />