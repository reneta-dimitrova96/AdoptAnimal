@using AdoptAnimal.Common
@model AdoptAnimal.Web.ViewModels.Advertisements.AdvertisementsListViewModel
@{
    this.ViewData["Title"] = "Get all advertisements by UserId";
}

<div class="row">
    @foreach (var ad in this.Model.Advertisements)
    {
        <div class="card col-md-3 p-1 shadow-lg bg-white">
            <div class="card col-md-12 p-1 shadow-lg bg-white">
                <img class="card-img-top img-responsive" src=@ad.Pet.ImageUrl alt=@ad.Pet.Name style="width:100%; height:50%">
                <div class="card-body p-1">
                    <h5 class="card-title text-center p-1 mb-0">@ad.Title </h5>
                    <a asp-action="ByUserIdByAdId" asp-route-id="@ad.Id" class="btn btn-primary ml-5 mb-0 text-center">Details</a>
                    <a asp-controller="Categories" asp-action="ById" asp-route-id="@ad.Pet.CategoryId" class="btn btn-primary ml-2 mb-0">@ad.Pet.CategoryName</a>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<partial name="_PagingPartial" model="@Model" />