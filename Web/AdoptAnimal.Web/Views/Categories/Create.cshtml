@model AdoptAnimal.Web.ViewModels.Categories.CreateCategoryInputModel
@{
    this.ViewData["Title"] = "Add new category";
}
<h1>@this.ViewData["Title"]</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <input type="submit" />

</form>
