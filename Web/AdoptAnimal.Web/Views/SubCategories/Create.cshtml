@model AdoptAnimal.Web.ViewModels.SubCategories.CreateSubCategoryInputModel
@{
    this.ViewData["Title"] = "Add new subcategories";
    var categoryItems = this.Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
}
<h1>@this.ViewData["Title"]</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId" asp-items="categoryItems"></select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    <input type="submit" />

</form>