                    </svg>
                </div>
            </div>
        </div>
        <div class="card col-md-3 p-1 mt-2 shadow-lg bg-white" style="height: 185px;">
            <div class="card col-md-12 p-1 shadow-lg bg-white">
                <div class="card-body p-1 text-center">
                    <h4 class="mt-4">@Model.UsersCount <br /> Users</h4>
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                        <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        <path fill-rule="evenodd" d="M5.216 14A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216z" />
                        <path d="M4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>
    <div class="row ml-0 mr-0 mt-4">
        @foreach (var ad in this.Model.RecentAdvertisements)
        {
            <div class="card col-md-3 p-1 mt-2 shadow-lg bg-white">
                <div class="card col-md-12 p-1 shadow-lg bg-white">
                    <img class="card-img-top img-responsive" src=@ad.Pet.ImageUrl alt=@ad.Pet.Name style="width:100%; height:50%">
                    <div class="card-body p-1">
                        <h5 class="card-title text-center p-1 mb-0">@ad.Title</h5>
                        <p class="card-text mb-0">@ad.Description.Substring(0, 20)...</p>
                        <p class="card-text mb-1 text-center font-italic">@ad.CreatedOn.ToString("dd/MM/yy") @ad.Address</p>
                        <a asp-action="ById" asp-route-id="@ad.Id" class="btn btn-primary ml-5 mb-0">Details</a>
                        <a asp-controller="Categories" asp-action="ById" asp-route-id="@ad.Pet.CategoryId" class="btn btn-primary ml-2 mb-0">@ad.Pet.CategoryName</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
