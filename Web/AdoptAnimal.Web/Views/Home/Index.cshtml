@using AdoptAnimal.Common
@model AdoptAnimal.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="container">
    <header style="background-color: #D3D3D3">
        <div class="container px-5">
            <div class="row gx-5 align-items-center justify-content-center">
                <div class="col-lg-8 col-xl-7 col-xxl-6">
                    <div class="my-5 text-center text-xl-start">
                        <h1 class="display-5 fw-bolder text-dark mb-2">Welcome to @GlobalConstants.SystemName!</h1>
                        <p class="lead fw-normal text-dark-50 mb-4">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit!</p>
                        <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xl-center">
                            <a class="btn btn-info btn-lg px-4 mr-3" href="#!">Learn More</a>
                        </div>
                    </div>
                </div>
                <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center"><img class="img-fluid rounded-3 my-5" src="https://cdn.pixabay.com/photo/2016/01/01/02/01/animal-welfare-1116205_960_720.jpg" alt="Adopt me!" /></div>
            </div>
        </div>
    </header>
    <div class="row ml-0 mr-0 mt-4">
        <div class="card col-md-3 p-1 mt-2 shadow-lg bg-white" style="height: 185px;">
            <div class="card col-md-12 p-1 shadow-lg bg-white">
                <div class="card-body p-1 text-center">
                    <h4 class="mt-4" style="color: #9370db">@Model.AdoptAnimalsCount <br /> Adopted Animals</h4>
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-balloon-heart" viewBox="0 0 16 16">
