@model AdoptAnimal.Data.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h3>Details</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        @if (Model.ModifiedOn != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModifiedOn)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
<br />

@if (Model.SubCategories.Count() > 0)
{
    <h4>Subcategories</h4>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.IsDeleted)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.DeletedOn)
                </th>
            </tr>
        </thead>
        @foreach (var item in Model.SubCategories)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeletedOn)
                    </td>
                </tr>
            </tbody>
        }
    </table>
}

